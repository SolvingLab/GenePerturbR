Package: GenePerturbR
Type: Package
Title: Genetic Perturbation Analysis with RNA-seq Database
Version: 1.1.0
Date: 2025-11-27
Authors@R: person(
    given = "Zaoqu",
    family = "Liu",
    email = "liuzaoqu@163.com",
    role = c("aut", "cre"),
    comment = c(ORCID = "0000-0002-0452-742X")
